 using System;

namespace matheus
{
	class Program
	{
		public static void Main(string[] args)
		{
		int[] numero1 = new int[5];
        int[] numero2 = new int[5];
        int[] soma = new int[5];

        for (int i = 0; i < 5; i++)
        {
            Console.Write("Insira o {0}º número do primeiro conjunto: ", i );
            numero1[i] = int.Parse(Console.ReadLine());

            Console.Write("Insira o {0}º número do segundo conjunto: ", i + 1);
            numero2[i] = int.Parse(Console.ReadLine());

            soma[1] = numero1[i] + numero2[i];
        }
        Console.WriteLine("A soma dos vetores é: "+ soma);
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
